<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DentAssist</title>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentAssist.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary">
                    <i class="bi bi-hospital-fill me-1"></i> DentAssist
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDentAssist" aria-controls="navbarDentAssist" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarDentAssist">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="InicioSesion" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-auto pt-4 pb-2">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-6 mb-3">
                    <h5 class="text-uppercase">DentAssist</h5>
                    <p class="small">
                        Plataforma de gestión odontológica para profesionales y clínicas. Organiza tus tratamientos, turnos y pacientes de manera eficiente.
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <h5 class="text-uppercase">Contacto</h5>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-envelope me-2"></i> soporte@dentassist.com</li>
                        <li><i class="bi bi-telephone me-2"></i> +56 9 3227 4277</li>
                        <li><i class="bi bi-geo-alt me-2"></i> Santiago, Chile</li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary">

            <div class="text-center small">
                &copy; 2025 DentAssist. Todos los derechos reservados.
            </div>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
