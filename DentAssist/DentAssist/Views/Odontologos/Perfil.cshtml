@{
    ViewData["Title"] = "Perfil";
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold text-primary">Mi Perfil</h2>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3 fw-semibold">Matrícula</dt>
            <dd class="col-sm-9">@Model.Matricula</dd>

            <dt class="col-sm-3 fw-semibold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-semibold">Especialidad</dt>
            <dd class="col-sm-9">@Model.Especialidad?.NombreEspecialidad</dd>
        </dl>

        <a asp-action="Index" asp-controller="Odontologos" class="btn btn-outline-secondary mt-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Volver
        </a>
    </div>
</div>
