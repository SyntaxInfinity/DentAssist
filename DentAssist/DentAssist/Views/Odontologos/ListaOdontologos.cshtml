@model IEnumerable<DentAssist.Models.Entities.Odontologo>

@{
    ViewData["Title"] = "Listado de Odontólogos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Listado de Odontólogos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Nuevo Odontólogo
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Matricula)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().EspecialidadId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Password)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Matricula</td>
                            <td>@item.Email</td>
                            <td>@item.EspecialidadId</td>
                            <td class="text-muted">••••••••</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i>
                                    Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-info-circle"></i>
                                    Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash3"></i>
                                    Borrar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
