@model DentAssist.Models.Entities.Odontologo

@{
    ViewData["Title"] = "Eliminar Odontólogo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este odontólogo?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Matrícula</dt>
                        <dd class="col-sm-8">@Model.Matricula</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Especialidad</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">Contraseña</dt>
                        <dd class="col-sm-8 text-muted">••••••••</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                    <a asp-controller="Odontologos" asp-action="ListaOdontologos" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>
