@model DentAssist.Models.Entities.TratamientoPropuesto

@{
    ViewData["Title"] = "Eliminar Tratamiento Propuesto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este tratamiento del plan?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Tratamiento</dt>
                        <dd class="col-sm-8">@Model.Tratamiento?.Nombre</dd>

                        <dt class="col-sm-4">Fecha Estimada</dt>
                        <dd class="col-sm-8">@Model.FechaEstimada</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.EstadoPaso</dd>

                        <dt class="col-sm-4">Orden en Secuencia</dt>
                        <dd class="col-sm-8">@Model.OrdenSecuencia</dd>

                        <dt class="col-sm-4">Observaciones</dt>
                        <dd class="col-sm-8">@Model.ObservacionesPaso</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PlanId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Details" asp-controller="PlanTratamientos" asp-route-id="@Model.PlanId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
