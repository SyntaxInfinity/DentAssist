@model DentAssist.Models.Entities.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark"
            <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Crear Nuevo Turno</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha Programada</label>
                    <input asp-for="Fecha" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Duracion" class="form-label">Duración (minutos)</label>
                    <input asp-for="Duracion" class="form-control" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select">
                        <option value="">-- Selecciona estado --</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PacienteId" class="form-label">Paciente</label>
                    <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-select">
                        <option value="">-- Selecciona paciente --</option>
                    </select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="OdontologoId" class="form-label">Odontólogo</label>
                    <select asp-for="OdontologoId" asp-items="ViewBag.Odontologos" class="form-select">
                        <option value="">-- Selecciona odontólogo --</option>
                    </select>
                    <span asp-validation-for="OdontologoId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-controller="Usuarios" asp-action="Recepcionista" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
