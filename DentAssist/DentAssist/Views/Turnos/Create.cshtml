@model DentAssist.Models.Entities.Turno

@{
    ViewData["Title"] = "Crear Turno";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Turno</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha Programada</label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Duracion" class="form-label">Duración (Min)</label>
                    <input asp-for="Duracion" class="form-control" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PacienteId" class="form-label">Paciente</label>
                    <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-select">
                        <option value="">-- Selecciona un paciente --</option>
                    </select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                    <div class="mt-2">
                        <a asp-action="Create" asp-controller="Pacientes" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-person-plus"></i> Nuevo Paciente
                        </a>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="OdontologoId" class="form-label">Odontólogo</label>
                    <select asp-for="OdontologoId" asp-items="ViewBag.Odontologos" class="form-select">
                        <option value="">-- Selecciona un odontólogo --</option>
                    </select>
                    <span asp-validation-for="OdontologoId" class="text-danger"></span>
                </div>

                <div class="form-group text-end">
                    <input type="submit" value="Guardar Turno" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer bg-light">
            <a asp-controller="Usuarios" asp-action="Recepcionista" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
