@model IEnumerable<DentAssist.Models.Entities.Turno>

@{
    ViewData["Title"] = "Turnos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Turnos Programados</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Turno
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Fecha Programada</th>
                    <th>Duración (Min)</th>
                    <th>Estado</th>
                    <th>Paciente</th>
                    <th>Odontólogo</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fecha</td>
                        <td>@item.Duracion</td>
                        <td>
                            <span class="badge
                                        @(item.Estado == "Confirmado" ? "bg-success" : 
                                        item.Estado == "Pendiente" ? "bg-warning text-dark" :
                                        item.Estado == "Cancelado" ? "bg-danger" : "bg-secondary")">
                                        @item.Estado
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.PacienteId)</td>
                    <td>@Html.DisplayFor(modelItem => item.OdontologoId)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
