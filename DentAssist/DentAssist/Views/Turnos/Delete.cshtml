@model DentAssist.Models.Entities.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">¿Estás seguro que deseas eliminar este turno?</p>
            <dl class="row">
                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha)</dd>

                <dt class="col-sm-3">Duración (min)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Duracion)</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3">Paciente</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Paciente.Nombre)</dd>

                <dt class="col-sm-3">Odontólogo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Odontologo.Nombre)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <form asp-action="Delete" class="m-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </div>
</div>
