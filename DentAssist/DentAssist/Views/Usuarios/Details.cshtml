@model DentAssist.Models.Entities.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Detalles del Usuario</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Password)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Rol)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Rol)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
