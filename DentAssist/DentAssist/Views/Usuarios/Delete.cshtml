@model DentAssist.Models.Entities.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash-fill"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">¿Estás seguro que deseas eliminar este usuario?</p>

            <dl class="row mb-0">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Password)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Rol)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Rol)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </div>
</div>
