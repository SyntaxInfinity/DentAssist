@model DentAssist.Models.Entities.PlanTratamiento

@{
    ViewData["Title"] = "Eliminar Plan de Tratamiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este plan de tratamiento?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Paciente</dt>
                        <dd class="col-sm-8">@Model.Paciente?.Nombre</dd>

                        <dt class="col-sm-4">Odontólogo</dt>
                        <dd class="col-sm-8">@Model.Odontologo?.Nombre</dd>

                        <dt class="col-sm-4">Fecha de Creación</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion</dd>

                        <dt class="col-sm-4">Observaciones</dt>
                        <dd class="col-sm-8">@Model.ObservacionesGenerales</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
